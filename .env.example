# ===========================================
# CrabTrader â€“ .env example (copy to .env)
# ===========================================
# Required: wallet + AI + database
PRIVATE_KEY=0x...
ANTHROPIC_API_KEY=sk-ant-...

# Database (Supabase)
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_KEY=your_anon_key

# Farcaster (needed for posting to Farcaster)
NEYNAR_API_KEY=...
FARCASTER_SIGNER_UUID=...

# ===========================================
# Market source (pick one)
# ===========================================
# PredictBase (Base + USDC, real orders with API key)
USE_PREDICTBASE=true
PREDICTBASE_API_KEY=your_predictbase_api_key

# Polymarket
# USE_POLYMARKET=true

# Real Polymarket trading (Polygon + USDC required)
# POLYMARKET_TRADING_ENABLED=true
# POLYMARKET_CHAIN_ID=137
# POLYMARKET_FUNDER_ADDRESS=0x...   # optional; defaults to wallet address (EOA)
# POLYMARKET_SIGNATURE_TYPE=0       # 0=EOA, 1=Magic, 2=Gnosis Safe proxy
# Optional: reuse existing CLOB API creds (otherwise created on first run)
# POLYMARKET_API_KEY=...
# POLYMARKET_API_SECRET=...
# POLYMARKET_API_PASSPHRASE=...

# ===========================================
# Optional
# ===========================================
BASE_RPC_URL=https://mainnet.base.org
NFT_CONTRACT_ADDRESS=0x...
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Risk / loop
MIN_ETH_BALANCE=0.01
LOOP_INTERVAL_MS=180000
MAX_POSITION_SIZE=0.1

# Polymarket URLs (defaults are fine)
# POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
# POLYMARKET_CLOB_URL=https://clob.polymarket.com

# Real Limitless trading (only if you switch to Limitless as market source)
# LIMITLESS_TRADING_ENABLED=true
# LIMITLESS_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
# LIMITLESS_OWNER_ID=12345

# Tips / features
# TIP_RECIPIENTS=0x...,0x...
# TIP_AMOUNT_ETH=0.0005
# DISABLE_TIPS=true
# DISABLE_MENTIONS=true
# LOG_LEVEL=info
